{{=<% %>=}}
<style>
  .ab-help {
    margin-top: 8px;
  }
  .ab-help details {
    border: 1px solid var(--ion-color-step-150);
    background: var(--ion-color-step-100);
    border-radius: 12px;
    padding: 0;
    overflow: hidden;
  }
  .ab-help summary {
    list-style: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 12px;
    font-size: 0.95em;
    color: var(--ion-color-medium);
  }
  /* Hide default marker (iOS/WebKit) */
  .ab-help summary::-webkit-details-marker { display: none; }
  .ab-help .ab-help-icon {
    font-size: 1.2em;
    color: var(--ion-color-medium);
  }
  .ab-help .ab-chevron {
    margin-left: auto;
    transition: transform 160ms ease;
    color: var(--ion-color-medium);
  }
  .ab-help details[open] .ab-chevron {
    transform: rotate(180deg);
  }
  .ab-help .ab-help-content {
    padding: 10px 12px 12px;
    color: var(--ion-color-medium);
    line-height: 1.35;
    font-size: 0.92em;
    border-top: 1px solid var(--ion-color-step-150);
    background: var(--ion-item-background, var(--ion-color-step-100));
  }
</style>

<ion-item lines="none" class="ab-mobile-block">
  <ion-icon name="chatbubble-ellipses" slot="start"></ion-icon>
  <ion-label>
    <h2><% pluginname %></h2>

    <!-- Pretty accordion help -->
    <div class="ab-help">
      <details>
        <summary aria-label="Hilfe Ã¶ffnen">
          <ion-icon class="ab-help-icon" name="information-circle-outline"></ion-icon>
          <span><%#str%>help, block_alphabees<%/str%></span>
          <ion-icon class="ab-chevron" name="chevron-down-outline"></ion-icon>
        </summary>
        <div class="ab-help-content">
          <%#str%>helptitle, block_alphabees<%/str%>
        </div>
      </details>
    </div>

  </ion-label>
</ion-item>

<div id="al-chat-data"
     data-botid="<% botid %>"
     data-apikey="<% apikey %>"
     data-courseid="<% courseid %>"
     data-userid="<% userid %>"
     data-sectionnum="<% sectionnum %>"
     data-sectionid="<% sectionid %>"
     style="display:none"></div>